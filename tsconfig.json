{
  "compilerOptions": {
    "target": "ES2015",
    "jsx": "react",
    "module": "ES2015",
    "moduleResolution": "Bundler",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
